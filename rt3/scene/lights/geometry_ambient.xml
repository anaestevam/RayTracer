<RT3>
    <lookat look_from="0 10 5 " look_at="0 0 5" up="0 0 1" />
    <camera type="perspective" screen_window="-8 8 -6 6" />
    <film type="image" x_res="800" y_res="600" filename="light.png" img_type="png" />

    <!-- The Scene -->
    <world_begin/>

        <!-- The Background -->
        <background type="colors" bl="153 204 255" tl="18 10 143" tr="18 10 143" br="153 204 255" />

        <!-- Lights -->
        <light_source type="ambient" L="0.1 0.1 0.1" />

        <!-- Material Library -->
        <make_named_material type="blinn" name="gold"     color="42 201 51"   ambient="0.4 0.4 0.4" diffuse ="1 0.65 0.0"   specular ="0.8 0.6 0.2" glossiness ="256"/>
        <make_named_material type="blinn" name="grey"     color="42 201 51"  ambient="0.1 0.1 0.1" diffuse ="0.7 0.7 0.7"  specular ="0 0 0"       glossiness ="0"/>
        <make_named_material type="blinn" name="redish"   color="42 201 51"  ambient="0.6 0.6 0.6" diffuse ="0.9 0.2 0.1"  specular ="0.8 0.8 0.8" glossiness ="64"/>
        <make_named_material type="blinn" name="greenish" color="42 201 51" ambient="0.6 0.6 0.6" diffuse ="0.2 0.9 0.2"  specular ="0.8 0.8 0.8" glossiness ="256"/>
        <make_named_material type="blinn" name="blueish"  color="42 201 51" ambient="0.6 0.6 0.6" diffuse ="0.1 0.2 0.9"  specular ="0.8 0.8 0.8" glossiness ="16"/>

        <!-- Objects -->
        <named_material name="redish"/>
        <!-- <translate value="0 1 0" /> -->
        <object type="sphere" radius="1" />

        <named_material name="greenish"/>
        <!-- <translate value="-2 1 3" /> -->
        <object type="sphere" radius="1" />

        <named_material name="blueish"/>
        <!-- <translate value="2 1 -2" /> -->
        <object type="sphere" radius="1" />

        <named_material name="gold"/>
        <!-- <translate value="3 1.7 7" /> -->
        <object type="sphere" radius="1.7" />

    <world_end/>
</RT3>
